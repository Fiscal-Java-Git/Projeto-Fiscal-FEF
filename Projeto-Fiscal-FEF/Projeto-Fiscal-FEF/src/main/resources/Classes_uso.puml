    +LocalDateTime criadoEm
    +LocalDateTime atualizadoEm
}

class FaturaCartao {
    +Long id
    +LocalDateTime competencia
    +LocalDateTime dataFechamento
    +LocalDateTime dataVencimento
    +BigDecimal valorTotal
    +StatusFatura status
    +LocalDateTime criadoEm
    +LocalDateTime atualizadoEm
}

class Lancamento {
    +Long id
    +TipoLancamento tipo
    +String descricao
    +BigDecimal valor
    +LocalDateTime dataCompetencia
    +LocalDateTime dataVencimento
    +MeioPagamento meioPagamento
    +StatusLancamento status
    +BigDecimal valorBaixado
    +LocalDateTime criadoEm
    +LocalDateTime atualizadoEm
}

class ContaBancaria {
    +Long id
    +String instituicao
    +String agencia
    +String numero
    +String apelido
    +BigDecimal saldoInicial
    +LocalDateTime dataSaldoInicial
    +Boolean ativa
    +LocalDateTime criadoEm
    +LocalDateTime atualizadoEm
}

class MovimentoConta {
    +Long id
    +TipoTransacao tipo
    +BigDecimal valor
    +String historico
    +Long referenciaId
    +String referenciaTipo
    +LocalDateTime dataMovimento
    +LocalDateTime criadoEm
    +LocalDateTime atualizadoEm
}

class Pagamento {
    +Long id
    +LocalDateTime dataPagamento
    +BigDecimal valorPago
    +String observacao
    +LocalDateTime criadoEm
    +LocalDateTime atualizadoEm
}

class Recebimento {
    +Long id
    +LocalDate dataRecebimento
    +BigDecimal valor
    +String observacao
}

class Transferencia {
    +Long id
    +LocalDateTime data
    +BigDecimal valor
    +String observacao
}

class CentroCusto {
    +Long id
    +String nome
    +String codigo
    +Boolean ativo
    +LocalDateTime criadoEm
    +LocalDateTime atualizadoEm
}

class Entidade {
    +Long id
    +String nome
    +String documento
    +String tipo
    +Boolean ativo
    +LocalDateTime criadoEm
    +LocalDateTime atualizadoEm
}

